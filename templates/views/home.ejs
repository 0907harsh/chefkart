   <body>
       <%- include('../partials/header') %>
       <div id="flash-message" class="uk-alert-success" style="z-index: 10;display:none;" uk-alert></div>
            
       <div class="main-content-wrapper" uk-grid>
            
            <% pizzas.forEach(function(pizza){ %>
                <div class="uk-card uk-card-default uk-width-1-2 uk-width-1-3@s uk-width-1-4@m uk-width-1-5@l" style="padding-right: 20px;">
                    <div  class="uk-card-media-top">
                        <img class="uk-padding" src="/media/img/<%= pizza.image %>" width="300rem" alt="">
                    </div>
                    <div class="uk-card-body uk-text-center">
                        <p class="uk-card-title"><%= pizza.name %></p>
                        <small><%= pizza.size %></small><br>
                        <%= pizza.price %>
                        <a data-pizza_current="<%= JSON.stringify(pizza) %>" style="margin-left: 2rem;margin-right: 0px" class="add-to-cart uk-button uk-button-primary uk-rounded">Add</a>
                    </div>
                </div>
           <% }) %>
       
        </div>
