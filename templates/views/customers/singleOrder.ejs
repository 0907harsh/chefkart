
   <!DOCTYPE html>
   <head>
       <meta charset="UTF-8">
       <meta name="viewport" content="width=device-width,initial-scale=1.0">
       <link rel="stylesheet" href="/css/uiCss/uikit.min.css" >
       <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
       <link rel="stylesheet"  href="/css/order.css" >
   </head>
   <body>
       <%- include('../../partials/header') %>
        <!-- includinfg the partial foort-->
        
        <section class="status">
            <% if(messages.success) { %>
				<pre id="order-alert"><span class="uk-alert-success" uk-alert><%= messages.success %></span></pre>
			<% } %>
            <div class="uk-container">
                <div class="status-box">
                    <div class="uk-flex" uk-grid>
                        <div class="uk-width-expand"><h3>Track Delivery Status</h3></div>
                        <div class="uk-width-expand" style="text-align: right;"><h6 style="color: rgb(224, 59, 95);"><%= order._id %></h6></div>
                        <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>" >
                    </div>
                    <ul>
                        <li class="status_line" style="padding-bottom: 4rem;" data-status="Order_Accepted"><span>Order Placed</span></li>
                        <li class="status_line" style="padding-bottom: 4rem;" data-status="Confirmed"><span>Order Confirmed</span></li>
                        <li class="status_line" style="padding-bottom: 4rem;" data-status="Prepared"><span>Order Prepared</span></li>
                        <li class="status_line" style="padding-bottom: 4rem;" data-status="Out_For_Delivery"><span>Out For Delivery</span></li>
                        <li class="status_line" data-status="Completed"><span>Completed</span></li>
                    </ul>
                </div>
            </div>
        </section>
        <script>
            const oderlert = document.getElementById('order-alert')
            if(oderlert){
                setTimeout(()=>{
                    oderlert.remove()
                },2000)
            }
        </script>
        <script src="/js/order.js"></script>
        <%- include('../../partials/footer') %>
        
   </body>
    